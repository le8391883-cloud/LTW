<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="~/Image/Header/faviconIMG.png" type="image/png">
    <link rel="stylesheet" href="~/Content/Header.css" />
    <link rel="stylesheet" href="~/Content/Footer.css" />
    <script src="https://kit.fontawesome.com/54f0cb7e4a.js" crossorigin="anonymous"></script>
    <title>@ViewBag.Title - CellPhoneS</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("Styles", required: false)
</head>
<body>
    @* 1. Header (Cấu trúc Bookara, Nội dung CellPhoneS) *@
    <header style="width: 100%; height: 20%;">
        <section class="header">
            <img src="image-12/ảnh 1.jpg" alt="" style="width: 100%; height: auto;">
        </section>

        <nav class="container-nav-bar">
            <div class="container">
                <ul class="nav-bar">
                    <li><a href="/Home/HomePage"><img style="width: 200px;" src="image-12/cellphones-logo-ngang.jpg" alt="Logo CellPhoneS"></a></li>
                    <li><a href="">Tây Ninh<i class="fas fa-sort-down"></i></a></li>
                    <li class="search-container"><input type="text" placeholder="Bạn muốn mua gì..."><i class="fas fa-search"></i></li>
                    <li><button><i class="fas fa-shopping-cart"></i>Giỏ hàng</button></li>
                    <li><button><i class="fas fa-file"></i>Tra cứu đơn hàng</button></li>
                    <li><button><i class="fas fa-house-user"></i>Cửa hàng gần bạn</button></li>
                    <li><button><i class="fas fa-user"></i>Đăng nhập</button></li>
                </ul>
            </div>
        </nav>

        <div class="container-nav-bar">
            <nav class="nav-bar-header">
                <ul class="nav-bar">
                    <li><a href=""><i class="fas fa-mobile"></i>Điện thoại, Tablet</a></li>
                    <li><a href=""><i class="fas fa-laptop"></i>Laptop</a></li>
                    <li><a href=""><i class="fas fa-headphones"></i>Âm thanh, Mic thu âm</a></li>
                    <li><a href=""><i class="fas fa-clock"></i>Đồng hồ</a></li>
                    <li><a href=""><i class="fas fa-keyboard"></i>Phụ kiện</a></li>
                    <li><a href=""><i class="fas fa-desktop"></i>PC, Màn hình, Máy in</a></li>
                    <li><a href=""><i class="fas fa-tv"></i>TV</a></li>
                    <li><a href=""><i class="fas fa-recycle"></i>Thu cũ đổi mới</a></li>
                    <li><a href=""><i class="fas fa-percent"></i>Khuyến mãi</a></li>
                    <li><a href=""><i class="fas fa-newspaper"></i>Tin công nghệ</a></li>
                </ul>
            </nav>
        </div>

    </header>
    @* 2. Body *@

    @RenderBody()
    @* 3. Footer (Phần này sẽ bị thiếu vì code CellPhoneS không có, nhưng giữ lại cấu trúc) *@
    <footer>
        <div class="footer-bottom">
            <p>&copy; 2025 CellPhoneS. (Giữ nguyên cấu trúc Footer mẫu 1)</p>
        </div>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
